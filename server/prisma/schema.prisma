generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Custom Type
type Genre {
  mal_id Int
  name   String
}

// Model User (User)
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String
  password  String
  createdAt DateTime @default(now())
  
  wishlist  WishlistItem[]
}

// Model Wishlist (Favorite Anime List)
model WishlistItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  animeId   Int      
  title     String
  image     String
  score     Float?

  genres    Genre[]
  
  addedAt   DateTime @default(now())

  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, animeId])
}
